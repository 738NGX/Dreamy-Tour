<scroll-view class="scrollarea" scroll-y type="list">
    <!-- 弹出窗口: 创建空白行程 -->
    <t-popup-headered visible="{{creatorVisible}}" title="创建空白行程" bind:visible-change="onCreatorVisibleChange" bindConfirm="createTour" bindCancel="onCreatorVisibleChange" placement="bottom" style="height: 50vh;">
      <view class="block">
        <t-input label="行程名" placeholder="行程名上限20个字符" value="{{newTourName}}" maxlength="{{20}}" bind:blur="handleTitleInput" />
        <view class="row">
          <view class="column" style="width: 90%;">
            <view>出发日期:{{newTourStartDateStr}}</view>
            <view>返程日期:{{newTourEndDateStr}}</view>
          </view>
          <t-button size="large" theme="primary" variant="outline" style="width: 10%;" bind:tap="handleCalendar">选择</t-button>
        </view>
        <t-calendar visible="{{calendarVisible}}" value="{{newTourDate}}" minDate="{{minDate}}" maxDate="{{maxDate}}" bind:confirm="handleCalendarConfirm" type="range" />
        <t-cell title="选择统计货币" description="群组建立后不可更改为已选主辅货币之外的其他货币" arrow hover note="{{currencyText}}" bind:click="handleCurrencyPicker" />
        <t-picker visible="{{currencySelectorVisible}}" value="{{newTourCurrency}}" title="选择主/辅货币" cancelBtn="取消" confirmBtn="确认" usingCustomNavbar bindchange="onCurrencyPickerChange" bindpick="onCurrencyColumnChange" bindcancel="handleCurrencyPicker">
          <t-picker-item options="{{mainCurrencies}}"></t-picker-item>
          <t-picker-item options="{{subCurrencies}}"></t-picker-item>
        </t-picker>
      </view>
    </t-popup-headered>
    <!-- 弹出窗口:从外部导入行程 -->
    <t-popup-headered visible="{{importerVisible}}" title="从外部导入行程" bind:visible-change="onImporterVisibleChange" bindConfirm="importTour" bindCancel="onImporterVisibleChange" placement="bottom" style="height: 30vh;">
      <t-textarea placeholder="在这里粘贴行程数据" disableDefaultPadding="{{true}}" value="{{importedTourData}}" bind:change="handleImporterInput" />
    </t-popup-headered>
    <!-- 弹出窗口:选择行程复制 -->
    <t-picker visible="{{tourSelectorVisible}}" value="{{[selectingTourId]}}" title="选择行程拷贝" cancelBtn="取消" confirmBtn="确认" usingCustomNavbar bindchange="copyTour" bindpick="onTourColumnChange" bindcancel="onTourSelectorVisibleChange">
      <t-picker-item options="{{displayTourList}}"></t-picker-item>
    </t-picker>
    <!-- 选择行程创建方式 -->
    <view class="container">
      <block wx:for="{{creatorArray}}" wx:key="button">
        <view class="card">
          <view class='row' style='min-width: 95%; justify-content: space-between;'>
            <image mode="widthFix" style="width: 25%;" src="{{item.image}}" />
            <view style="width: 40%; flex-grow: 1; padding:0 15rpx">{{item.text}}</view>
            <t-button size="large" theme="primary" variant="outline" style="width: 15%;" bind:tap="{{item.action}}">{{item.button}}</t-button>
          </view>
        </view>
      </block>
    </view>
  </scroll-view>