<!-- pages/tour-view/tour-view.wxml -->
<header class="custom-navbar" title="查看行程" tabList="{{[]}}" />
<t-popup style="width:80% !important;" visible="{{settingsVisible}}" usingCustomNavbar bind:visible-change="handleSettings" placement="left">
  <t-cell title="行程版本选择" leftIcon="bookmark"/>
  <t-radio-group bind:change="onCopyChange" value="{{currentCopyIndex}}" options="{{copyOptions}}" />
  <t-cell bind:click="handleDateFilterStep" title="日期筛选器" leftIcon="calendar" hover note="{{currentDateFilter.label}}" arrow />
</t-popup>
<t-cell bind:click="handleSettings" title="{{currentTour?currentTour.title:'行程'}}" hover note="查看设置" arrow />
<scroll-view class="scrollarea" style="height:80vh" scroll-y type="list">
  <tour-viewer tour="{{currentTour}}" copyIndex="{{currentCopyIndex}}" dateFilter="{{currentDateFilter}}" />
</scroll-view>